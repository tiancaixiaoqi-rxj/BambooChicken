.container {
  padding: 20px;
}

.title {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 20px;
}


.activity-list {
  border: 1px solid #ccc;
  border-radius: 5px;
  padding: 10px;
}

.card {
  width: 100%;
  max-width: 600rpx;
  margin: 0 auto;
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.card-content {
  padding: 24rpx;
}

.activity-info {
  margin-bottom: 24rpx;
}

.activity-title {
  display: block;
  font-size: 35rpx;
  font-weight: 600;
  line-height: 1.4;
  color: #333333;
  margin-bottom: 12rpx;
}

.activity-title1 {
  display: block;
  font-size: 35rpx;
  font-weight: 600;
  line-height: 1.4;
	color: #333333;
	margin-left: 20rpx;
  margin-bottom: 12rpx;
}

.activity-description {
  display: block;
  font-size: 28rpx;
  line-height: 1.5;
  color: #666666;
}

.activity-image {
  width: 100%;
  height: 400rpx;
  border-radius: 12rpx;
}

/* 按钮样式 */
.receive-button {
  background: linear-gradient(90deg, #4CAF50, #8BC34A); 
  color: white; 
  border: none; 
  border-radius: 25px; 
  padding: 12px 30px;
  font-size: 16px; 
  font-weight: bold; 
  text-align: center; 
  transition: background 0.3s ease, transform 0.2s; 
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); 
}

.receive-button:hover {
  background: linear-gradient(90deg, #45a049, #7cb342); 
  transform: scale(1.05); 
}

.receive-button:active {
  transform: scale(0.95); 
}





