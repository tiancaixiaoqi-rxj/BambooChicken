.border-box {
  border: 2px solid #ffffff; /* 设置边框宽度、样式和颜色 */
  width: 640rpx; /* 设置宽度 */
  height: 150rpx; /* 设置高度 */
  margin: 20rpx auto; /* 设置外边距，使长方形居中显示 */
  background-color: #ffffff; /* 设置背景颜色 */
  border-radius: 20rpx; /* 设置圆角的半径 */
  display: flex; /* 使用 Flexbox 布局 */
  justify-content: space-between; /* 平均分配按钮的空隙 */
  align-items: center; /* 垂直居中对齐 */
  padding: 10rpx; /* 内边距 */
}

.button-container {
  display: flex; /* 使用 Flexbox 布局 */
  width: 100%; /* 容器宽度占满盒子 */
}

.image-button {
  flex: 1; /* 平均分配按钮的宽度 */
  margin: 0 8rpx; /* 按钮之间的间距 */
  text-align: center; /* 文本居中对齐 */
}

.image {
  width: 65%; /* 图片宽度占满按钮 */
  border-radius: 10rpx; /* 图片圆角 */
}

.word {
  font-size: 15px; /* 设置文字大小为15像素 */
}

