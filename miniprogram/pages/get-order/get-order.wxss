/* orders.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

.order-list {
  padding: 60rpx 30rpx 0rpx;
}

.order-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.order-number {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.tag {
  margin-left: 16rpx;
  background: #FBE9BA;
  color: #C4A05C;
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

.order-status {
  font-size: 28rpx;
  color: #333;
}

.order-content {
  padding: 20rpx 0;
  border-top: 1rpx solid #f5f5f5;
  border-bottom: 1rpx solid #f5f5f5;
}

.product-name {
  font-size: 30rpx;
  color: #333;
}

.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}

.order-time {
  font-size: 26rpx;
  color: #999;
}

.product-count {
  margin-left: 20rpx;
}

.order-price {
  display: flex;
  align-items: center;
}

.order-price text {
  font-size: 26rpx;
  color: #999;
}

.price {
  margin-left: 10rpx;
  font-size: 32rpx !important;
  color: #333 !important;
  font-weight: 500;
}

/*删除按钮*/
/* 全局样式 */
.page {
	padding: 20rpx;
	background-color: #f8f8f8; /* 背景色 */
}

/* 订单列表样式 */
.order-list {
	margin-top: 20rpx;
}

/* 单个订单项样式 */
.order-item {
	background-color: #ffffff; /* 订单项背景色 */
	border-radius: 8rpx; /* 圆角 */
	padding: 15rpx; /* 内边距 */
	margin-bottom: 15rpx; /* 下边距 */
	box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1); /* 阴影效果 */
}

/* 订单信息文本样式 */
.order-item text {
	display: block; /* 使得每个文本块独占一行 */
	margin-bottom: 10rpx; /* 文本间距 */
	font-size: 28rpx; /* 字体大小 */
	color: #333333; /* 字体颜色 */
}

/* 删除按钮样式 */
.delete-button {
	background-color: #ff4d4f; /* 按钮背景色 */
	color: white; /* 字体颜色 */
	border: none; /* 去掉边框 */
	border-radius: 4rpx; /* 圆角 */
	padding: 10rpx 15rpx; /* 内边距 */
	font-size: 28rpx; /* 字体大小 */
	cursor: pointer; /* 鼠标指针样式 */
	transition: background-color 0.3s; /* 动效 */
}

/* 删除按钮悬停效果 */
.delete-button:hover {
	background-color: #d43f3a; /* 悬停时背景色 */
}
