.container {
  display: flex;
  justify-content: center; /* 水平居中 */
  align-items: center; /* 垂直居中 */
  min-height: 100vh; /* 确保容器高度足够 */
  background-color: #f5f5f5; /* 背景颜色 */
}

.form {
  display: flex;
  flex-direction: column; /* 垂直方向布局 */
  align-items: center; /* 子元素水平居中 */
  background-color: #fff; /* 表单背景颜色 */
  border-radius: 10rpx; /* 圆角 */
  padding: 40rpx; /* 内边距 */
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1); /* 阴影效果 */
  width: 80%; /* 适当宽度 */
  max-width: 400rpx; /* 最大宽度 */
}

.avatar-wrapper {
  background: transparent; /* 背景透明 */
  border: none; /* 去掉边框 */
  cursor: pointer; /* 鼠标悬停效果 */
}

.avatar {
  width: 100rpx; /* 头像大小 */
  height: 100rpx; /* 头像大小 */
  border-radius: 50%; /* 圆形头像 */
  margin-bottom: 10rpx; /* 头像与文本间距 */
}

.avatar-text {
  font-size: 28rpx; /* 字体大小 */
  color: black; /* 文字颜色 */
  margin-bottom: 20rpx; /* 文字与输入框间距 */
  text-align: center; /* 文字居中 */
}

input[type="text"] {
  width: 100%; /* 输入框宽度 */
  padding: 10rpx; /* 内边距 */
  border: 1px solid #ccc; /* 边框颜色 */
  border-radius: 5rpx; /* 圆角 */
  font-size: 28rpx; /* 字体大小 */
  margin-bottom: 20rpx; /* 输入框与按钮间距 */
}

.login-btn {
  background-color: #1aad19; /* 按钮背景颜色 */
  color: #fff; /* 字体颜色 */
  padding: 10rpx 20rpx; /* 按钮内边距 */
  border-radius: 5rpx; /* 圆角 */
  border: none; /* 去掉边框 */
  font-size: 32rpx; /* 字体大小 */
  cursor: pointer; /* 鼠标悬停效果 */
  transition: background-color 0.3s; /* 添加过渡效果 */
}

.login-btn:hover {
  background-color: #159b16; /* 鼠标悬停效果 */
}
