/* Menu Section */
.menu-container {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 10rpx 0;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  position: relative;
}

.menu-item:active {
  background: rgba(0, 0, 0, 0.02);
}

.menu-item::after {
  content: '';
  position: absolute;
  left: 30rpx;
  right: 30rpx;
  bottom: 0;
  height: 1rpx;
  background: #f0f0f0;
}

.menu-item:last-child::after {
  display: none;
}

.menu-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
}

.menu-text {
  flex: 1;
  font-size: 30rpx;
  color: #333333;
}

.menu-arrow {
  width: 16rpx;
  height: 16rpx;
  border-top: 4rpx solid #cccccc;
  border-right: 4rpx solid #cccccc;
  transform: rotate(45deg);
}
